{
  "name": "football-scouting-platform",
  "version": "1.0.0",
  "description": "A pioneering digital platform that revolutionizes how young football talents are discovered, developed, and connected with professional scouts worldwide.",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "dev": "live-server --host=localhost --port=8080",
    "build": "npm run test && npm run build:prod",
    "build:prod": "echo 'Production build - TODO: Add build process'",
    "lint": "eslint js/ tests/",
    "lint:fix": "eslint js/ tests/ --fix"
  },
  "keywords": [
    "football",
    "scouting",
    "sports",
    "talent",
    "discovery",
    "firebase",
    "webapp"
  ],
  "author": "Maor36 <vvlielvv@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "firebase": "^10.7.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
